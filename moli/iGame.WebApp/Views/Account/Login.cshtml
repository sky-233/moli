@{
    ViewBag.Title = "登录";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    #footer.footer {
        display: none;
    }
</style>
<div class="signbar-wrap">
    <div class="container">
        <div class="signbar">
            <h2 class="text-center">
                欢迎登录
            </h2>

            <div class="sign-form">
                <form>
                    <div class="form-group input-group-custom">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-user"></i></span>
                            <input type="text" id="username" class="form-control" placeholder="账号/手机号">
                        </div>
                    </div>
                    <div class="form-group input-group-custom">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                            <input type="password" id="password" class="form-control" placeholder="输入密码">
                        </div>
                    </div>
                    <div class="checkbox text-right mb20">
                        <a href="#" class="">忘记密码？</a>
                    </div>
                    <p>
                        <button type="button" id="btnSubmit" class="btn btn-block bg-primary">登录</button>
                    </p>
                </form>
                <div class="text-center pt10">没有账号？<a href="@Url.Action("Register","Account")" title="注册">点击注册</a></div>
            </div>
        </div>
    </div>
</div>

