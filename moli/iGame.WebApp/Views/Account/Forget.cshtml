
@{
    ViewBag.Title = "忘记密码";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    #footer.footer {
        display: none;
    }
</style>
<div class="signbar-wrap">
    <div class="container ">
        <div class="signbar">
            <h2 class="text-center pb20">
                忘记密码
            </h2>
            <div class="progress">
                <div class="progress-bar progress-bar-success" style="width: 33.333333%">
                    验证账号
                </div>
                <div class="" style="width: 33.333333%">
                    修改密码
                </div>
                <div class="" style="width: 33.333333%">
                    完成
                </div>
            </div>
            <div class="sign-form">
                <form>
                    <div class="form-group input-group-custom">
                        <div class="input-group">
                            <span class="input-group-addon">账号</span>
                            <input type="text" id="" class="form-control" placeholder="邮箱/手机号">
                        </div>
                    </div>
                    <div class="form-group input-group-custom">
                        <div class="input-group">
                            <span class="input-group-addon">绑定</span>
                            <input type="text" id="" class="form-control" placeholder="邮箱/手机号">
                        </div>
                    </div>
                    <div class="form-group  input-group-custom">
                        <div class="row">
                            <div class="col-xs-7">
                                <input type="text" id="mCode" class="form-control" placeholder="验证码">
                            </div>
                            <div class="col-xs-5">
                                <a href="#" class="btn btn-block form-control-static  bg-secondary">获取验证码</a>
                            </div>
                        </div>
                    </div>
                    <p>
                        <button type="button" id="btnSubmit" class="btn btn-block bg-primary">确认注册</button>
                    </p>
                </form>
            </div>
            <footer class=" third-login">
                <div class="text-center">
                    <a href="#" class="bg-secondary"><i class="fa fa-qq"></i></a>
                    <a href="#" class="bg-secondary"><i class="fa fa-wechat"></i></a>
                </div>

                <div class="text-center pt10">已有账号？<a href="#" title="注册">点击登录</a></div>
            </footer>
        </div>
    </div>
</div>
